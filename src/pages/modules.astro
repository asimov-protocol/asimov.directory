---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ModulesApp from '../components/ModulesApp';
import type { SortOption } from '../types';

const url = Astro.url;
const sortParam = url.searchParams.get('sort') as SortOption;
const initialSort: SortOption = sortParam || 'created_at';

// SEO metadata
const title = 'ASIMOV Modules - Browse Open Source Modules | ASIMOV.Directory';
const description =
  'Discover and explore our collection of ASIMOV modules from the GitHub ecosystem. Browse repositories with powerful sorting and filtering options.';
const keywords =
  'ASIMOV modules, GitHub repositories, open source modules, asimov-modules organization, developer tools, module browser';
const canonicalUrl = 'https://asimov.directory/modules';
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://asimov.directory/og-image.png" />

    <!-- Twitter -->
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://asimov.directory/twitter-image.png" />
  </Fragment>

  <Navbar />

  <div class="bg-gGray-100 min-h-screen" id="modules-page">
    <div class="container mx-auto px-4 py-8">
      <ModulesApp client:load initialSort={initialSort} />
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
